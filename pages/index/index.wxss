/**index.wxss**/
@import "../movies/movies.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.customSwiper {
  height: 420rpx;
  position: relative;
}

.customSwiper swiper {
  height: 100%;
}

.banner {
  height: 400px;
  background-color: #ddd;
}

.tab {
  height: 7orpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.tab .tab-item {
  background-color: #ccc;
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  font-size: 12rpx;
  color: #fff;
  border-radius: 4px;
  margin-right: 10px;
}

.tab .tab-item.selected {
  background-color: #2a579a;
}

.index {
  min-height: 100vh;
  font-size: 24px;
  color: white;
}

.location {
  border: 2rpx solid #ff5252;
  border-radius: 30px;
  width: 400rpx;
  margin: 20rpx auto 40rpx auto;
  padding: 10rpx 10rpx;
  background-color: #ff5252;
}

.hotcityCommon {
  font-size: 30rpx;
  color: #666;
  padding-bottom: 0;
  margin: 8rpx 0;
  margin-left: 16rpx;
}

.thisCityName {
  display: inline-block;
  border: 1rpx solid #2a579a;
  border-radius: 8rpx;
  padding: 10rpx 10rpx;
  font-size: 30rpx;
  color: #2a579a;
  text-align: center;
  min-width: 149.5rpx;
  margin: 16rpx;
}

.changeCity {
  margin-right: 5rpx;
  vertical-align: bottom;
}

.weatherwrap {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 10rpx 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 10rpx;
  color: #666;
  font-size: 14px;
  background-color: #f5f5f5;
}

/*当天天气信息*/

.info {
  margin-top: 20rpx;
  width: 100%;
  height: 225px;
}

/*城市名称*/

.city {
  margin: 20rpx;
  border-bottom: 1px solid #2a579a;
}

/*当天温度*/

.temp {
  font-size: 100rpx;
  line-height: 130rpx;
  text-align: center;
  padding-top: 20rpx;
  color: #2a579a;
}

/*温度描述*/

.weather {
  line-height: 22px;
  margin: 20rpx;
  padding: 0 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.life {
  line-height: 22px;
  margin: 5px 0;
  padding: 0 5px;
}

/**index.wxss**/
@import "../movies/movies.wxss";

.customSwiper {
  height: 270rpx;
  position: relative;
}

.customSwiper swiper {
  height: 100%;
}

.banner {
  height: 250px;
  background-color: #ddd;
}

.tab {
  height: 7orpx;
  width: 100%;
  position: absolute;
  bottom: 10rpx;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.tab .tab-item {
  background-color: #ccc;
  height: 35rpx;
  width: 35rpx;
  line-height: 35rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 10px;
  margin-right: 5px;
}

.tab .tab-item.selected {
  background-color: #638639;
}

.index {
  min-height: 100vh;
  font-size: 24px;
  color: white;
}

.location {
  border: 2rpx solid #ff5252;
  border-radius: 30px;
  width: 400rpx;
  margin: 20rpx auto 40rpx auto;
  padding: 10rpx 10rpx;
  background-color: #ff5252;
}

.locationContent {
  display: flex;
  flex-direction: row;
}

.locationDesc {
  display: flex;
  flex-direction: row;
  vertical-align: middle;
}

.locationLogo {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx 60rpx 20rpx 20rpx;
}

.hotcityCommon {
  font-size: 30rpx;
  color: #666;
  padding-bottom: 0;
  margin: 8rpx 0;
  margin-left: 16rpx;
}

.thisIcon {
  width: 80rpx;
  height: 80rpx;
}

.thisCityName {
  display: inline-block;
  padding: 10rpx 10rpx;
  font-size: 30rpx;
  color: #638639;
  text-align: center;
  min-width: 149.5rpx;
}

.changeCity {
  margin-right: 5rpx;
  vertical-align: bottom;
}

.bgwrap {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 10rpx 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 10rpx;
  color: #666;
  font-size: 14px;
  background-color: #f5f5f5;
}

/*当天天气信息*/
.info {
  width: 100%;
  height: 310rpx;
}

/*城市名称*/

.city {
  margin: 20rpx;
  border-bottom: 1px solid #638639;
}

/*当天温度*/

.temp {
  font-size: 90rpx;
  line-height: 130rpx;
  text-align: center;
  padding-top: 5rpx;
  color: #638639;
}

.weatherContent {
  display: flex;
  flex-direction: column;
}

/*温度描述*/

.weather {
  display: flex;
  flex-direction: row;
}

.weather view {
  margin-left: 15rpx;
}

.life {
  line-height: 22px;
  margin: 5px 0;
  padding: 0 5px;
}

.dateTime{
  margin: 20rpx;
}

/* 导航标题样式 */

.navigateTitle {
  color: #638639;
  border-bottom: 1rpx dashed #638639;
  font-size: 40rpx;
  font-family: Cursive;
  font-weight: bold;
  margin: 30rpx 20rpx 0 20rpx;
}

.navigateTitle::before {
  content: "";
  display: inline-block;
  width: 20px;
  height: 25px;
  margin-right: 2px;
  vertical-align: middle;
  background: url("data:image/png;base64,") no-repeat center;
  background-size: 100%;
}

.locationContent {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}



